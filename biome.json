{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"indentStyle": "tab"
		}
	},
	"files": {
		"includes": ["src", "convex"]
	}
}
